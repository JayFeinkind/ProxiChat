
<style>
    a:visited { text-decoration: none; color:blue; }
    a:hover { text-decoration: none; color:blue; }
    a:focus { text-decoration: none; color:red; }
    a:hover, a:active { text-decoration: none; color:blue }
    a {  text-decoration:none;  }

    #submit-button {
        display: block;
        margin: 0 auto;
        margin-bottom: 5px;
    }

    input {
        border-radius: 5px;
    }

    body, input {
        font-family: "Lucida Sans";
        font-size: larger;
    }

    input {
        padding-left: 5px;
    }

    span, input {
        display: inline;
        margin: 5px;
    }

    #password-rules {
        margin-bottom: 5px;
        margin-top: 10px;
    }

    .field-label {
        width: 20%;
        display: inline-block;
    }

    #error-container {
        width: 40%;
        display: block;
        margin: 0 auto;
    }

        #error-container span {
            color: #FF3B30;
        }
</style>

<h4>Create a new account.</h4>
<div class="form-group">
    <div class="col-md-10">
        <div class="field-label">
            <span>User Name:</span>
        </div>
        <input type="text" id="user-name-input-box" />
    </div>
    <div class="col-md-10">
        <div class="field-label">
            <span>First Name:</span>
        </div>
        <input type="text" id="first-name-input-box" />
    </div>
    <div class="col-md-10">
        <div class="field-label">
            <span>Last Name:</span>
        </div>
        <input type="text" id="last-name-input-box" />
    </div>
    <div class="col-md-10">
        <div class="field-label">
            <span>Email:</span>
        </div>
        <input type="text" placeholder="Hello@world.com" id="email-input-box" />
    </div>
</div>
<div class="form-group">
    <div class="col-md-10">
        <div class="field-label">
            <span>Password:</span>
        </div>
        <input type="password" placeholder="Not Password!" id="password-input-box" />
        <span id="password-rules" style="display:inline;"> 5+ Characters, 1 Capital letter</span>
    </div>
</div>
<div class="form-group">
    <div class="col-md-10">
        <div class="field-label">
            <span>Confirm Password:</span>
        </div>
        <input type="password" id="password-confirm-input-box" />
    </div>
</div>
<div id="error-container">
</div>
<div class="spacer-2" style="height:2em;"></div>
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        @*submit() implemented in parent view CreateAccount.cshtml.  This is so a new partial can be loaded in*@
        <input onclick="submit()" id="submit-button" type="button" value="Let's Go!" style="width:10em;" />
    </div>
</div>
<div class="spacer-2" style="height:2em;"></div>
<div id="forgot-password">
    <a href="https://www.google.com">Forgot my password &#128561</a>
</div>
<div class="spacer-2" style="height:2em;"></div>